<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.musicplayer">


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Music"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MusicPlayer">
        <activity
            android:name=".Rock"
            android:label="@string/rock_playlist" />
        <activity
            android:name=".Pop"
            android:label="@string/pop_playlist" />
        <activity
            android:name=".Country"
            android:label="@string/country_playlist" />
        <activity
            android:name=".Electronic"
            android:label="@string/electronic_playlist" />
        <activity
            android:name=".HeavyMetal"
            android:label="@string/heavy_metal_playlist" />
        <activity
            android:name=".HipHop"
            android:label="@string/hip_hop_playlist" />
        <activity
            android:name=".RhythmBlues"
            android:label="@string/rhythm_blues_playlist" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>